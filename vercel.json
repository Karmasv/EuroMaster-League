{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/\$1"
    },
    {
      "src": "/teams",
      "dest": "/pages/teams.html"
    },
    {
      "src": "/matches",
      "dest": "/pages/matches.html"
    },
    {
      "src": "/players",
      "dest": "/pages/players.html"
    },
    {
      "src": "/standings",
      "dest": "/pages/standings.html"
    },
    {
      "src": "/stats",
      "dest": "/pages/stats.html"
    },
    {
      "src": "/schedule",
      "dest": "/pages/schedule.html"
    },
    {
      "src": "/live",
      "dest": "/pages/live.html"
    },
    {
      "src": "/admin-panel",
      "dest": "/pages/admin-panel.html"
    },
    {
      "src": "/team-detail",
      "dest": "/pages/team-detail.html"
    },
    {
      "src": "/match-detail",
      "dest": "/pages/match-detail.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
