{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "."
      }
    }
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/api/$1"},
    {"src": "/(?!api|styles\\.css|.*\\.js|.*\\.json)(.*)$", "dest": "/index.html"},
    {"src": "/(.*)", "dest": "/$1"}
  ]
}
