{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "."
      }
    }
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/api/$1"},
    {"src": "/(.+\\.(js|css|gif|jpg|jpeg|png|ico|svg|webp|json|xml|txt))$", "dest": "/$1"},
    {"src": "/.*", "dest": "/index.html"}
  ]
}
