{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "."
      }
    }
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/api/$1"},
    {"src": "/teams", "dest": "/index.html"},
    {"src": "/matches", "dest": "/index.html"},
    {"src": "/standings", "dest": "/index.html"},
    {"src": "/(.*)", "dest": "/index.html"}
  ]
}
